{
    "apps": [
        {
            "script": "start.js",
            "watch": true,
            "name": "dojs.cc",
            "ignore_watch": ["data", "public", "package.json", "node_modules/dojs/node_modules", ".git", ".gitignore"],
            "exec_mode": "cluster",
            "instances": "max",
            "error_file": "data/logs/error.log",
            "out_file": "data/logs/debug.log",
            "min_uptime": "60s",
            "max_restarts": 30,
            "max_memory_restart": "300M"
        }
    ]
}